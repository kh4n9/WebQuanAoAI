@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Order Listed";
}
<h3>List Order</h3>
<hr />

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Code</th>
            <th scope="col">Status</th>
            <th scope="col">UserName</th>
            <th scope="col">Date</th>
            <th scope="col">Manage</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>@item.OrderCode</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td>
                <td>@item.UserName</td>
                <td>@item.CreatedDate</td>

                <td>
                    <a asp-action="ViewOrder" asp-controller="Order" asp-route-Id="@item.OrderCode"><button type="button" class="btn btn-primary">View</button></a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id"><button type="button" class="btn btn-danger confirmDeletion">Delete</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>
