@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Order Details";
}
<h3>List Order</h3>
<hr />

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">UserName</th>
            <th scope="col">OrderCode</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Product</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">#</th>
                <td>@item.UserName</td>
                <td>@item.OrderCode</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Name</td>
                <td>
                    <a asp-action="ViewOrder" asp-controller="Order" asp-route-Id="@item.OrderCode"><button type="button" class="btn btn-primary">View</button></a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id"><button type="button" class="btn btn-danger confirmDeletion">Delete</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>
